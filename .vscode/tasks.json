{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build server",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "-pthread",
                "${workspaceFolder}/cpp/*.cpp",
                "-o",
                "${workspaceFolder}/debug/debug_server.out"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault":  true
            },
            "detail": "compiler: /usr/bin/g++"
        },
        {
            "type": "cppbuild",
            "label": "Build client",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "-pthread",
                "${workspaceFolder}/test_client/*.cpp",
                "-o",
                "${workspaceFolder}/test_client/tcp_client.out"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault":  true
            },
            "detail": "compiler: /usr/bin/g++"
        }
    ],
    "version": "2.0.0"
}